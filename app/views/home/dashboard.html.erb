<div class="col-md-8 no-padding">
  <%= render 'videos/index/videos_list', {
    :title => 'Assigned Videos',
    :videos => @assigned_videos,
    :message_empty => 'No videos assigned.',
    :star => true
  } %>

  <%= render 'videos/index/videos_list', {
    :title => 'Top Priority Videos',
    :title_link => videos_path,
    :videos => @priority_videos,
    :message_empty => 'No videos need to be translated quickly.'
  } %>

  <%= render 'videos/index/videos_list', {
    :title => 'Recently Translated Videos',
    :title_link => videos_path(:statuses => [ :translated ]),
    :videos => @recently_translated_videos,
    :message_empty => 'No videos translated recently.'
  } %>
</div>

<div class="col-md-4 no-padding">
  <%= render 'home/dashboard/accomplishments_frame', {
    :assigned => @assigned_videos.length,
    :translated => @translated_videos.length,
    :reviewed => @reviewed_videos.length,
    :user => current_user
  } %>

  <%= render 'home/dashboard/goals_frame' %>

  <%= render 'home/dashboard/rankings_frame', :leaders => @leaders, :after => @after %>
</div>
