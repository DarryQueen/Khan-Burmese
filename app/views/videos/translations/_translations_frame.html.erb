<% tooltip_title = translations.empty? ? 'Sorry, nothing to review.' : 'Review translations here!' %>
<div id="review" title="<%= tooltip_title %>" class="panel panel-default module module-videos" data-trigger="manual">
  <div class="panel-heading">
    <b>Recent Translations</b>
  </div>
  <div class="panel-content">
    <% if translations.empty? %>
      <div class="panel-empty">
        No translations yet. Be the first to make one!
      </div>
    <% else %>
      <%= render 'videos/translations/translations_table', :video => video, :translations => translations %>
      <%= render :partial => 'videos/translations/downvote_modal',
        :collection => translations,
        :as => :translation,
        :locals => { :video => video }
      %>
    <% end %>
  </div>
</div>
