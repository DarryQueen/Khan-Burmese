<div class="row centered-form">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default module">
      <div class="panel-heading">
        Edit Video "<%= @video.title %>"
      </div>
      <div class="panel-body">
        <%= form_for @video, :url => video_path(@video), :method => :put, :html => { :class => 'form-update' } do |f| %>
          <div class="form-group">
            <%= f.text_field :title, :autofocus => true, :class => 'form-control', :placeholder => 'Title' %>
          </div>

          <div class="form-group">
            <%= text_field_tag 'video[subject]', @video.subject_list.join(', '), :class => 'form-control', :placeholder => 'Subject' %>
          </div>

          <div class="form-group">
            <%= f.text_area :description, :class => 'form-control', :placeholder => 'Description' %>
          </div>

          <%= link_to('Destroy', '', {
            :remote => true,
            :class => 'btn btn-danger pull-left',
            :data => {
              :toggle => 'modal',
              :target => '#destroyModal'
            }
          }) %>
          <%= f.submit 'Update', :class => 'btn btn-info pull-right' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'videos/edit/destroy_modal', :video => @video %>
