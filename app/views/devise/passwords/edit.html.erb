<% devise_error_messages! %>

<div class="row centered-form">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default module">
      <div class="panel-heading">
        Change Your Password
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: 'New Password' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm Password' %>
          </div>

          <%= f.submit 'Change My Password', class: 'btn btn-info center-block' %>
        <% end %>
      </div>
    </div>
    <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <div class="text-center">
        Didn't receive confirmation instructions? <%= link_to 'Resend instructions!', new_confirmation_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
